- form_for @issue do |f|

  = f.error_messages

  %p
    = f.label :title
    %br
    = f.text_field :title
  
  %p
    = f.label :content
    %br
    = f.text_area :content
  
  %fieldset
    %legend Panels
    = link_to_remote 'Add Panel', :url => new_panel_path, :method => :get
    
    %ul#panel-set
      %input#panel-order{ :type => 'hidden', :value => @issue.panels.collect{|p| p.id}.join(',') }
      
  
  %p= f.submit "Submit"